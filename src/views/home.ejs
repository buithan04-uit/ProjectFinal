<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Home Page</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<style>
  .table-container {
    padding: 15px 20px;
  }

  .title {
    font-size: 25px;
    font-weight: 600;
    padding-bottom: 10px;
  }

  table {
    border-collapse: collapse;
    width: 100%;
  }

  th,
  td {
    padding: 8px;
    text-align: left;
    border-bottom: 1px solid #ddd;
  }

  tr:hover {
    background-color: #ccc;
  }
</style>

<body>
  <div class="topnav">
    <a class="active" href="/">Home</a>
    <a href="/Create">Create User</a>
  </div>
  <div class="Table-container">
    <div class="title">List User</div>
    <table>
      <tr>
        <th>User Name</th>
        <th>Email</th>
        <th>Password</th>
        <th>Action</th>
      </tr>

      <!-- <% for (let i=0; i < listUsers.length; i++) { %>
        <tr>
          <td>
            <%= listUsers[i].Username %>
          </td>
          <td>
            <%= listUsers[i].Email %>
          </td>
          <td>
            <%= listUsers[i].Password %>
          </td>
          <td>
            <button>Edit</button>
            <button>Delete</button>
          </td>
        </tr>
        <% } %>. -->

      <% listUsers.forEach(function(user) { %>
        <tr>
          <td>
            <%= user.Username %>
          </td>
          <td>
            <%= user.Email %>
          </td>
          <td>
            <%= user.Password %>
          </td>
          <td>
            <a href="/update/<%= user.Username %>">Edit</a>

            <form action="/delete-user/<%= user.Username %>" method="=POST">
              <button>Delete</button>
            </form>
          </td>
        </tr>
        <% }); %>
    </table>
  </div>
</body>

</html>